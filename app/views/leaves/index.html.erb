<%= render 'errors', resource: @leave %>

<div class="container">

  <!-- Opening new modal button -->
  <button type="button" class="btn btn-success" data-toggle="modal" data-target="#myModal">
    Book time off
  </button>
  <br>
  <hr>

  <div class="row" id="container_leaves">
    <%= render @leaves %>
  </div>

  <!-- Modal action new -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="myModalLabel">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <%= render 'form' %>
        </div>
      </div>
    </div>
  </div>

  <!-- Cards for each leave -->
  <div class="col-md-4 text-center">
    <% @leaves.each do |leave| %>
      <div class="card">
        <div class="card-header">
          <%= @status %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= leave.leave_type %></h5>
          <p class="card-text">
            <%= leave.start_date %>
          </p>
          <p>
            <%= leave.end_date %>
          </p>
          <p>
            <%= leave.reason_for_leave if leave.reason_for_leave.present? %>
          </p>
          <div class="card-footer">
            <%= link_to 'Show', leafe_path(leave), class: 'btn btn-outline-info' %>
            <%= link_to 'Edit', edit_leafe_path(leave), class: 'btn btn-outline-info' %>
            <%= link_to 'Destroy', leafe_path(leave), method: :delete, class: 'btn btn-outline-danger js-delete-leave' %>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  </div>
  <!-- Cards end -->
</div>
