<%= render 'errors', resource: @leave %>

<%= form_for :leave, url: leaves_path do |f| %>
<p>
  <%= f.label :Type %>
Tutaj rozwijalna lista
</p>
<p>
  <%= f.label :Starting %><br>
  <%= f.text_field :start_date %>
</p>
<p>
  <%= f.label :Ending %><br>
  <%= f.text_field :end_date %>
</p>
<p>
  <%= f.label :Reason_for_absence %><br>
  <%= f.text_area :reason_for_leave %>
</p>
<p>
  <%= f.submit %>
</p>
<% end %>
